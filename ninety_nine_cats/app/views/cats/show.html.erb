<h1> <%= @cat.name %> </h1>

<h2>Cat Bio</h2>

<ul>
  <li> Age: <%= @cat.age %> </li>
  <li> Date of Birth: <%= @cat.birth_date %> </li>
  <li> Color: <%= @cat.color %> </li>
  <li> Sex: <%= @cat.sex %> </li>
  <li> Description: <%= @cat.description %> </li>
</ul>

<h2>Rental Requests</h2>

<ul>
  <% CatRentalRequest.where('cat_id = ?', @cat.id).order('start_date').each do |request| %>
    <li><%= request.start_date %> - <%= request.end_date %></li>
  <% end %>
</ul>